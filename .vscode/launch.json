{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Attach to Running Container",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src",
          "remoteRoot": "/src"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Batch: fetch_stock_prices",
      "type": "debugpy",
      "request": "launch",
      "module": "app.batch.fetch_stock_prices",
      "cwd": "${workspaceFolder}/src",
      "args": ["--ticker", "8001.T", "--days", "7", "--dry-run"],
      "justMyCode": false
    }
  ]
}
